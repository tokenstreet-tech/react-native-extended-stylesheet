{
    "name": "react-native-extended-stylesheet",
    "version": "0.12.0",
    "description": "Extended StyleSheets for React Native",
    "author": {
        "name": "Vitaliy Potapov",
        "email": "noginsk@rambler.ru"
    },
    "main": "src/index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "test": "jest --onlyChanged",
        "test:cov": "jest --coverage",
        "test:cov:upload": "yarn run test:cov && yarn run coveralls",
        "tr": "BABEL_ENV=runtyper jest --no-cache",
        "sync-yarn-lock": "rm yarn.lock && yarn import && git add -A yarn.lock && (git diff-index --quiet HEAD -- yarn.lock || git commit -m'sync yarn.lock' --no-verify)",
        "coveralls": "coveralls < coverage/lcov.info",
        "prerelease": "run-s lint test:cov tr ts:verify sync-yarn-lock",
        "postrelease": "git push --follow-tags --no-verify",
        "release": "npm version $VER && npm publish",
        "release-patch": "VER=patch npm run release",
        "release-minor": "VER=minor npm run release",
        "ts:verify": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "prettier:changed": "pretty-quick",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*": "prettier --ignore-unknown --write",
        "*.js": "eslint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/vitalets/react-native-extended-stylesheet.git"
    },
    "bugs": {
        "url": "https://github.com/vitalets/react-native-extended-stylesheet/issues"
    },
    "dependencies": {
        "css-mediaquery": "^0.1.2",
        "object-resolve-path": "^1.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/runtime": "^7.16.5",
        "@types/react-native": "^0.66.10",
        "babel-eslint": "^10.1.0",
        "babel-plugin-runtyper": "^0.4.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.5.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-native": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "lint-staged": "^12.1.4",
        "metro-react-native-babel-preset": "^0.66.2",
        "npm-run-all": "^4.1.5",
        "prettier": "2.5.1",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.5.4"
    },
    "jest": {
        "automock": false,
        "roots": [
            "src"
        ]
    },
    "keywords": [
        "react",
        "react-native",
        "react-component",
        "react-native-component",
        "mobile",
        "ios",
        "android"
    ],
    "license": "MIT"
}
