{
    "name": "@tokenstreet/react-native-extended-stylesheet",
    "version": "0.15.1",
    "description": "Extended StyleSheets for React Native",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "tokenstreet-react-native-extended-stylesheet.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "test": "jest",
        "typescript": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "yarn lint --fix",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "prettier:changed": "pretty-quick",
        "build": "bob build",
        "release": "release-it",
        "example": "yarn --cwd example",
        "bootstrap": "yarn && yarn build && yarn example",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*": "prettier --ignore-unknown --write",
        "*.(js|jsx|ts|tsx)": "eslint --fix"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet/",
    "author": "Daniel Reichhart <daniel@tokenstreet.com> (https://tokenstreet.com/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet//issues"
    },
    "homepage": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet/#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "dependencies": {
        "css-mediaquery": "^0.1.2",
        "object-resolve-path": "^1.1.1"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.3.0",
        "@react-native-community/eslint-config": "^3.2.0",
        "@release-it/conventional-changelog": "^5.1.1",
        "@types/css-mediaquery": "^0.1.1",
        "@types/jest": "^29.2.3",
        "@types/react": "^17.0.45",
        "@types/react-native": "^0.67.8",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.45.0",
        "commitlint": "^17.3.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-jest": "^27.1.6",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "lint-staged": "^13.1.0",
        "prettier": "2.8.1",
        "pretty-quick": "^3.1.3",
        "react": "^17.0.2",
        "react-native": "^0.68.5",
        "react-native-builder-bob": "^0.20.3",
        "release-it": "^15.5.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "utility-types": "^3.10.0"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
