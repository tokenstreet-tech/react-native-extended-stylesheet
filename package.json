{
    "name": "@tokenstreet/react-native-extended-stylesheet",
    "version": "0.13.0",
    "description": "Extended StyleSheets for React Native",
    "author": "Daniel Reichhart <daniel@tokenstreet.com>",
    "main": "dist/index.js",
    "types": "types/react-native-extended-stylesheet.d.ts",
    "scripts": {
        "build": "tsc",
        "test": "jest --onlyChanged",
        "test:cov": "jest --coverage",
        "tr": "BABEL_ENV=runtyper jest --no-cache",
        "coveralls": "coveralls < coverage/lcov.info",
        "ts:verify": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "prettier:changed": "pretty-quick",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*": "prettier --ignore-unknown --write",
        "*.js": "eslint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/tokenstreet-tech/react-native-extended-stylesheet.git"
    },
    "bugs": {
        "url": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet/issues"
    },
    "dependencies": {
        "css-mediaquery": "^0.1.2",
        "object-resolve-path": "^1.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.16.5",
        "@babel/eslint-parser": "^7.16.5",
        "@babel/preset-react": "^7.16.5",
        "@babel/runtime": "^7.16.5",
        "@react-native-community/eslint-config": "^3.0.1",
        "@types/css-mediaquery": "^0.1.1",
        "@types/jest": "^27.0.1",
        "@types/react-native": "^0.66.10",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "babel-plugin-runtyper": "^0.4.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-native": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "lint-staged": "^12.1.4",
        "metro-react-native-babel-preset": "^0.66.2",
        "prettier": "2.5.1",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.5.4"
    },
    "jest": {
        "automock": false,
        "roots": [
            "src"
        ]
    },
    "keywords": [
        "react",
        "react-native",
        "react-component",
        "react-native-component",
        "mobile",
        "ios",
        "android"
    ],
    "license": "MIT",
    "homepage": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet#readme"
}
