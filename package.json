{
    "name": "@tokenstreet/react-native-extended-stylesheet",
    "version": "0.13.0",
    "description": "Extended StyleSheets for React Native",
    "author": "Daniel Reichhart <daniel@tokenstreet.com>",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "ts:verify": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "prettier:changed": "pretty-quick",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*": "prettier --ignore-unknown --write",
        "*.(js|ts|tsx)": "eslint --fix"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/tokenstreet-tech/react-native-extended-stylesheet.git"
    },
    "bugs": {
        "url": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet/issues"
    },
    "dependencies": {
        "css-mediaquery": "^0.1.2",
        "object-resolve-path": "^1.1.1"
    },
    "devDependencies": {
        "@types/css-mediaquery": "^0.1.1",
        "@types/jest": "^27.0.1",
        "@types/react-native": "^0.66.10",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "lint-staged": "^12.1.4",
        "prettier": "2.5.1",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.5.4"
    },
    "jest": {
        "collectCoverage": true
    },
    "keywords": [
        "react",
        "react-native",
        "react-component",
        "react-native-component",
        "mobile",
        "ios",
        "android"
    ],
    "license": "MIT",
    "homepage": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet#readme"
}
