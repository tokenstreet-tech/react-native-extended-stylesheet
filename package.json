{
    "name": "@tokenstreet/react-native-extended-stylesheet",
    "version": "0.13.0",
    "description": "Extended StyleSheets for React Native",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "tokenstreet-react-native-extended-stylesheet.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "test": "jest",
        "typescript": "tsc --noEmit",
        "lint": "eslint \"**/*.{ts,tsx}\"",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "prettier:changed": "pretty-quick",
        "prepare": "bob build",
        "release": "release-it",
        "example": "yarn --cwd example",
        "pods": "cd example && pod-install --quiet",
        "bootstrap": "yarn example && yarn && yarn pods"
    },
    "lint-staged": {
        "*": "prettier --ignore-unknown --write",
        "*.(ts|tsx)": "eslint --fix"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet/",
    "author": "Daniel Reichhart <daniel@tokenstreet.com> (https://tokenstreet.com/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet//issues"
    },
    "homepage": "https://github.com/tokenstreet-tech/react-native-extended-stylesheet/#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "dependencies": {
        "css-mediaquery": "^0.1.2",
        "object-resolve-path": "^1.1.1"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^11.0.0",
        "@react-native-community/eslint-config": "^2.0.0",
        "@release-it/conventional-changelog": "^2.0.0",
        "@types/css-mediaquery": "^0.1.1",
        "@types/jest": "^26.0.0",
        "@types/react": "^16.9.19",
        "@types/react-native": "^0.62.13",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "commitlint": "^11.0.0",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^6.0.0",
        "jest": "^26.0.1",
        "lint-staged": "^12.1.4",
        "pod-install": "^0.1.0",
        "prettier": "2.5.1",
        "pretty-quick": "^3.1.3",
        "react": "16.13.1",
        "react-native": "0.63.4",
        "react-native-builder-bob": "^0.18.0",
        "release-it": "^14.2.2",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
